#
# rules.input-after
#
# Rules that should be run after the ufw command line added rules. Custom
# rules should be added to one of these chains:
#   ufw-after-input
#   ufw-after-output
#   ufw-after-forward
#

# Don't delete these required lines, otherwise there will be errors
*filter
:ufw-before-input - [0:0]
:ufw-before-output - [0:0]
:ufw-before-forward - [0:0]
:ufw-not-local - [0:0]
:ufw-is-local - [0:0]
:ufw-after-input - [0:0]
:ufw-after-output - [0:0]
:ufw-after-forward - [0:0]
# End required lines

# don't log noisy services by default
-A ufw-after-input -p udp --dport 137 -j ufw-skip-to-policy-input
-A ufw-after-input -p udp --dport 138 -j ufw-skip-to-policy-input
-A ufw-after-input -p tcp --dport 139 -j ufw-skip-to-policy-input
-A ufw-after-input -p tcp --dport 445 -j ufw-skip-to-policy-input
-A ufw-after-input -p udp --dport 67 -j ufw-skip-to-policy-input
-A ufw-after-input -p udp --dport 68 -j ufw-skip-to-policy-input

# don't log noisy broadcast
-A ufw-after-input -m addrtype --dst-type BROADCAST -j ufw-skip-to-policy-input

#BLAM

# allow all on loopback
#HuhaWWW
-A ufw-before-input -i lo -j ACCEPT
#Huha
-A ufw-before-output -o lo -j ACCEPT
#dropWhatever
-A ufw-after-input -i lo -j ACCEPT
#dropThank
-A ufw-after-output -o lo -j DROP
#drop
-A ufw-after-forward -i lo -j DROP
#drop
-A ufw-before-forward -o lo -j DROP

# quickly process packets for which we already have a connection
#D
-A ufw-before-input -m conntrack --ctstate RELATED,ESTABLISHED -j ACCEPT
#dropB
-A ufw-before-output -m conntrack --ctstate RELATED,ESTABLISHED -j ACCEPT
#dropB
-A ufw-before-forward -m conntrack --ctstate RELATED,ESTABLISHED -j DROP
#drop

#whatever
-A ufw-after-forward -m conntrack --ctstate RELATED,ESTABLISHED -j DROP
-A ufw-after-input -m conntrack --ctstate RELATED,ESTABLISHED -j DROP
-A ufw-after-output -m conntrack --ctstate RELATED,ESTABLISHED -j DROP

# drop INVALID packets (logs these in loglevel medium and higher)
-A ufw-before-input -m conntrack --ctstate INVALID -j ufw-logging-deny
-A ufw-before-input -m conntrack --ctstate INVALID -j DROP
#nolog
-A ufw-after-input -m conntrack --ctstate INVALID -j DROP
-A ufw-after-output -m conntrack --ctstate INVALID -j DROP
-A ufw-after-forward -m conntrack --ctstate INVALID -j DROP
-A ufw-before-forward -m conntrack --ctstate INVALID -j DROP
-A ufw-before-output -m conntrack --ctstate INVALID -j DROP
# ok icmp code for FORWARD
-A ufw-before-forward -p icmp --icmp-type destination-unreachable -j DROP
#drop
-A ufw-before-forward -p icmp --icmp-type time-exceeded -j DROP
#drop
-A ufw-before-forward -p icmp --icmp-type parameter-problem -j DROP
#drop
-A ufw-before-forward -p icmp --icmp-type echo-request -j DROP
#drop
# ok icmp code for FORWARD
#-A ufw-before-input -p icmp --icmp-type destination-unreachable -j ACCEPT
#drop
#-A ufw-before-input -p icmp --icmp-type time-exceeded -j ACCEPT
#drop
#-A ufw-before-input -p icmp --icmp-type parameter-problem -j ACCEPT
#drop
#-A ufw-before-input -p icmp --icmp-type echo-request -j ACCEPT
#drop
-A ufw-after-forward -p icmp --icmp-type destination-unreachable -j DROP
#drop
-A ufw-after-forward -p icmp --icmp-type time-exceeded -j DROP
#drop
-A ufw-after-forward -p icmp --icmp-type parameter-problem -j DROP
#drop
-A ufw-after-forward -p icmp --icmp-type echo-request -j DROP
#drop
#
-A ufw-before-input -p icmp --icmp-type destination-unreachable -j DROP
#drop
-A ufw-before-input -p icmp --icmp-type time-exceeded -j DROP
#drop
-A ufw-before-input -p icmp --icmp-type parameter-problem -j DROP
#drop
-A ufw-before-input -p icmp --icmp-type echo-request -j DROP
#drop
-A ufw-after-input -p icmp --icmp-type destination-unreachable -j DROP
#drop
-A ufw-after-input -p icmp --icmp-type time-exceeded -j DROP
#drop
-A ufw-after-input -p icmp --icmp-type parameter-problem -j DROP
#drop
-A ufw-after-input -p icmp --icmp-type echo-request -j DROP
#drop
#
-A ufw-before-output -p icmp --icmp-type destination-unreachable -j DROP
#drop
-A ufw-before-output -p icmp --icmp-type time-exceeded -j DROP
#drop
-A ufw-before-output -p icmp --icmp-type parameter-problem -j DROP
#drop
-A ufw-before-output -p icmp --icmp-type echo-request -j DROP
#drop
-A ufw-after-output -p icmp --icmp-type destination-unreachable -j DROP
#drop
-A ufw-after-output -p icmp --icmp-type time-exceeded -j DROP
#drop
-A ufw-after-output -p icmp --icmp-type parameter-problem -j DROP
#drop
-A ufw-after-output -p icmp --icmp-type echo-request -j DROP
#drop

# allow dhcp client to work
-A ufw-before-input -p udp --sport 67 --dport 68 -j ACCEPT

#
# ufw-not-local
#HTTP
-A ufw-before-input -j ufw-not-local
#-A ufw-before-output -j ufw-not-local
-A ufw-before-forward -j ufw-not-local
-A ufw-after-input -j ufw-not-local
-A ufw-after-output -j ufw-not-local
-A ufw-after-forward -j ufw-not-local
#SD
-A ufw-before-input -j ufw-is-local
#-A ufw-before-output -j ufw-is-local
-A ufw-before-forward -j ufw-is-local
-A ufw-after-input -j ufw-is-local
-A ufw-after-output -j ufw-is-local
-A ufw-after-forward -j ufw-is-local
#SU
# if LOCAL, RETURN
-A ufw-not-local -m addrtype --dst-type LOCAL -j RETURN

# if MULTICAST, RETURN
-A ufw-not-local -m addrtype --dst-type MULTICAST -j RETURN

# if BROADCAST, RETURN
-A ufw-not-local -m addrtype --dst-type BROADCAST -j RETURN
#SuperbestpartWWW
# if LOCAL, RETURN
-A ufw-is-local -m addrtype --dst-type LOCAL -j RETURN

# if MULTICAST, RETURN
-A ufw-is-local -m addrtype --dst-type MULTICAST -j RETURN

# if BROADCAST, RETURN
-A ufw-is-local -m addrtype --dst-type BROADCAST -j RETURN


# all other non-local packets are dropped
-A ufw-not-local -m limit --limit 3/min --limit-burst 10 -j ufw-logging-deny
-A ufw-not-local -j DROP
-A ufw-is-local -j DROP
# allow MULTICAST mDNS for service discovery (be sure the MULTICAST line above
# is uncommented)
-A ufw-before-input -p udp -d 224.0.0.251 --dport 5353 -j DROP
#drop
-A ufw-after-input -p udp -d 224.0.0.251 --dport 5353 -j DROP
#
-A ufw-before-output -p udp -d 239.255.255.250 --dport 1900 -j DROP
#drop
-A ufw-after-output -p udp -d 239.255.255.250 --dport 1900 -j DROP
#
-A ufw-before-forward -p udp -d 239.255.255.250 --dport 1900 -j DROP
#drop
-A ufw-after-forward -p udp -d 239.255.255.250 --dport 1900 -j DROP



# allow MULTICAST UPnP for service discovery (be sure the MULTICAST line above
# is uncommented)
-A ufw-before-input -p udp -d 239.255.255.250 --dport 1900 -j DROP
#drop
-A ufw-after-input -p udp -d 239.255.255.250 --dport 1900 -j DROP
#
-A ufw-before-output -p udp -d 239.255.255.250 --dport 1900 -j DROP
#drop
-A ufw-after-output -p udp -d 239.255.255.250 --dport 1900 -j DROP
#
-A ufw-before-forward -p udp -d 239.255.255.250 --dport 1900 -j DROP
#drop
-A ufw-after-forward -p udp -d 239.255.255.250 --dport 1900 -j DROP

# don't delete the 'COMMIT' line or these rules won't be processed
COMMIT
